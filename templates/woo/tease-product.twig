<article {{ fn('post_class', ['$classes', 'entry'] )}}>

    {{ fn('timber_set_product', post) }}

    <div class="productList">
        {% if showthumb %}
            <div class="productPreviewImage {% if not post.thumbnail %}placeholder{% endif %}">
                <a href="{{ post.link }}">
                    {% if post.thumbnail %}
                        <img src="{{ post.thumbnail.src|resize(post_thumb_size[0], post_thumb_size[1]) }}" />
                    {% else %}
                        <span class="thumb-placeholder"><i class="icon-camera"></i></span>
                    {% endif %}
                </a>
            </div>
        {% endif %}

        <div>
            {% do action('woocommerce_before_shop_loop_item_title') %}
        </div>
        <div>
            {% if post.title %}
                <h2 class="entry-title"><a href="{{ post.link }}">{{ post.title }}</a></h2>
            {% else %}
                <h2 class="entry-title"><a href="{{ post.link }}">{{ fn('the_title') }}</a></h2>
            {% endif %}
        </div>

        <div>
            {% do action( 'woocommerce_after_shop_loop_item_title' ) %}
        </div>

        <div>
            {% do action( 'woocommerce_after_shop_loop_item' ) %}
        </div>

    </div>
</article>