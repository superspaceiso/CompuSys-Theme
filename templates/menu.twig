{% if menu %}
	<ul>
	{% for item in items %}
		<li class="{{ item.classes | join(' ') }}">
			<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
			{% if item.children %}
				<ul>
				{% for child in item.children %}
					<li>
						<a href="{{ child.link }}">{{ child.title }}</a>
						{% if child.children %}
							<ul>
								{% for subchild in child.children %}
									<li>
										<a href="{{ subchild.link }}">{{ subchild.title }}</a>
									</li>
								{% endfor %}
							</ul>
						{% endif %}
					</li>
				{% endfor %}
				</ul>
			{% endif %}
		</li>
	{% endfor %}
	</ul>
{% endif %}
